<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type="org.sigmah.client.page.app.SectionTabStrip.MyStyle">
		@url backgroundUrl backgroundImage;
				
		.sections {
			height: 35px;
			float: left;
		}
		
		.section {
			font-family: tahoma, arial, verdana, sans-serif;
			font-weight: bold;
			color: #15428B;
			float: left;
			font-size: 16px;
			padding-left: 10px;
			padding-right: 10px;
			padding-top: 10px;
			margin-right: 15px;
			height: 25px;
			cursor: pointer;
			border: 1px solid transparent;
		}
				
		.activeSection {
			background: white;
			border-left: 1px solid #99BBE8;
			border-top: 1px solid #99BBE8;
			border-right: 1px solid #99BBE8;
			background: #dfe8f6;
		}
		
		.hoverSection {
			background: white;
			border-left: 1px solid #99BBE8;
			border-top: 1px solid #99BBE8;
			border-right: 1px solid #99BBE8;
		}
		
	</ui:style>
	<div class="{style.sections}" ui:field="sectionDiv">
		<div class="{style.section} {style.activeSection}">Dashboard</div>
		<div class="{style.section}">Data Entry</div>
		<div class="{style.section}">Reports</div>
		<div class="{style.section}">Design</div>
	</div>
</ui:UiBinder> 