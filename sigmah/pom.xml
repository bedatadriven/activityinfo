            <id>login</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>gwt-maven-plugin</artifactId>
                        <version>1.2</version>
                        <configuration>
                            <draftCompile>true</draftCompile>
                            <module>org.sigmah.login.Login</module>
                            <runTarget>login.html</runTarget>
