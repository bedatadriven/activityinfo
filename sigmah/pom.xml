            <id>mssql-test</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.5</version>
                        <configuration>
                            <systemProperties>
                                <property>
                                    <name>activityinfo.pu</name>
                                    <value>mssql-test</value>
                                </property>
